---
import Navigation from './Navigation.astro';
import { siteConfig } from '../config';

const baseUrl = import.meta.env.BASE_URL;
---

<header class="bg-gradient-to-r from-burgundy-900 via-burgundy-800 to-burgundy-700 text-slate-50 shadow-lg border-b-2 border-gold-500">
  <div class="container mx-auto px-4 py-6">
    <div class="flex flex-col md:flex-row items-center justify-between">
      <div class="mb-4 md:mb-0">
        <a href={baseUrl} class="text-2xl md:text-3xl font-serif font-bold text-gold-400 hover:text-gold-300 transition-colors">
          {siteConfig.name}
        </a>
        <p class="text-sm text-gold-200 mt-1">Avocat au Barreau du Val d'Oise</p>
      </div>
      <Navigation />
    </div>
  </div>
</header>
